<%- include('top_page') %>
<H1><%= page_title %></H1>
<a href="/U/Add">add user</a>
<table>
    <tr>
        <th></th>
        <th>שם</th>
        <th>מייל</th>
        <th>תז</th>
        <th></th>
    </tr>
    <% for(let usr of users){ %>
        <tr>
            <td>
                <a href="/U/Edit/<%= usr.id %>">edit</a>
            </td>
            <td><%= usr.name %></td>
            <td><%= usr.email %></td>
            <td><%= usr.tz %></td>
            <td>
                <form action="/U/Delete" method="post">
                    <input type="hidden" name="id" value="<%= usr.id %>">
                    <button>
                        מחיקה
                    </button>
                </form>
            </td>
        </tr>
    <% } %>
    <tr>
        <td colspan="100" class="centered">
            <br/>
            <form action="" method="get">
                <% if(page > 0) { %>
            <button name="p" value="<%= page-1 %>">הקודם</button>
                    <% } %>
            עמוד <%= page+1 %>
                    מתוך
                    <%= total_pages+1 %>
            <% if(page < total_pages) { %>
            <button name="p" value="<%= page+1 %>">הבא</button>
            <% } %>
            </form>
        </td>
    </tr>
</table>
<%- include('bottom_page') %>
